{
  "extends": ["prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "babel-plugin-root-import": {}
    }
  },
  "plugins": ["prettier"],
  "root": true,
  "rules": {
    "prettier/prettier": "error",
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "eqeqeq": ["error", "always"],
    "no-multi-spaces": ["error", { "ignoreEOLComments": true }],
    "no-use-before-define": "error",
    "block-spacing": "error",
    "object-curly-spacing": ["error", "always"],
    "default-case": "error",
    "prefer-const": "error"
  }
}
